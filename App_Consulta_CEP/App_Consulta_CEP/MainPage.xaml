<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App_Consulta_CEP"
             x:Class="App_Consulta_CEP.MainPage">

    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30">
        <Image x:Name="Logo" Source="logo.png"/>
        <Entry x:Name="Cep" Placeholder="Digite o CEP" PlaceholderColor="#FFBF00" BackgroundColor="White"/>
        <Button x:Name="Botao" Text="BUSCAR CEP" BackgroundColor="#00416B" TextColor="White"/>

        <!-- Place new controls here -->
        <Label x:Name="Resultado" Text="" 
           HorizontalOptions="Center"
           VerticalOptions="Center" />
    </StackLayout>

</ContentPage>